<h2>Show user</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

  <li>
    <strong>Last game:</strong>
    <%= @user.last_game_id %>
  </li>

</ul>

<%= if @current_user[:id] == @user.id do %>
    <%= link "Edit", to: user_path(@conn, :edit, @user) %>
<%= else %>
    <%= link "Back", to: user_path(@conn, :index) %>
<%= end %>