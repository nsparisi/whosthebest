<h2>Show user</h2>

<ul>

  <li>
    <strong>Username:</strong>
    <%= @user.username %>
  </li>
  <li>
    <strong>Stats:</strong>
    <%= "Completely awesome!"%>
  </li>
  <li>
    <strong>Weaknesses:</strong>
    <%= "none"%>
  </li>

</ul>

<%= if @current_user[:id] == @user.id do %>
    <%= link "Edit", to: user_path(@conn, :edit, @user) %>
<%= else %>
    <%= link "Back", to: user_path(@conn, :index) %>
<%= end %>